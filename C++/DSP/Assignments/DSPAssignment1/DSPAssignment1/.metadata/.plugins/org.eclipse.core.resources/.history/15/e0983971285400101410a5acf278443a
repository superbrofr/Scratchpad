#include "HexDump.h"
#include <iostream>
#include <iomanip>
#include <fstream>
#include <string.h>

using namespace std;

HexDump::~HexDump(){}

//Opens the specified input file and corresponding output file - returns false if one of both files can't
//be opened
bool HexDump::open(char* aFileName)
{
	char temp[(strlen(aFileName) + 4)];
	strcpy(temp, aFileName); //store the input file in a char array, so it can be appended with ".txt'

	fInput.open(aFileName, ios::binary);
	fOutput.open(strcat(temp, ".txt"), ios::out);

	if(fInput.is_open() && fOutput.is_open()){
		return true;
	}
	else{
		return false;
	}
}

void HexDump::close()
{
	fInput.close();
	fOutput.close();
}

void HexDump::run()
{
	int byteCount = 0;
	int whiteSpace = 50;
	string line;
	int nextChar;

	while(fInput.good()){
		if(byteCount == 0){
			fOutput << hex << uppercase << setfill('0') << setw(8) << fInput.tellg() << ": "; //display file pointer position
		}
		if(fInput.peek() == -1){
			whiteSpace -= (byteCount * 3);
			if(byteCount >= 8){
				whiteSpace -= 2;
			}
			for(int i = 0; i < whiteSpace; i++){
				fOutput << " ";
			}
			fOutput << line;
		}
		else{
			nextChar = fInput.get();
			if(isgraph(nextChar)){
				line += (char)nextChar;
			}
			else{
				line += ".";
			}
			fOutput << hex << uppercase << setfill('0') << setw(2) << nextChar << " ";
			++byteCount;
			if(byteCount == 8){
			fOutput << "| ";
			}
			else if (byteCount == 16){
				fOutput << line << "\n";
				line = "";
				byteCount = 0;
			}
		}
	}
}
